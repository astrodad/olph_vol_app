          <% @event = VolunteerEvent.new %>

          <%= form_for(@event, html: {class: "form-horizontal"}) do |f| %>
       
            <div class="control-group">


            <%= hidden_field_tag(:account, @account.id) %>
            <%= f.label "Enter the volunteer activity performed", class: "control-label" %>
            
            <div class="controls">

            <%= select_tag(:name, options_from_collection_for_select(Description.all, :id, :name)) %>

            
            <p class="help-block">Select the volunteer event you are reporting. If your event is not listed, please contact the HSA to have your event added at: <a href="mailto:olph.hsa@gmail.com?Subject=Add%20event%20for%20volunteer%20reporting">olph.hsa@gmail.com</a>. </p>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :event_date, class: "control-label" %>
            <div class="controls">
            <%= f.datepicker :event_date, dateFormat: "yy-mm-dd", altFormat: "dd-mm-yy" %>
          </div>
          </div>

          <div class="control-group">

            <%= f.label "Time worked" , class: "control-label" %>
            
            
              <div class="controls controls-inline">
              
            
                  <%= f.text_field :hour_worked, class: "input-small inline" %>

                  <%= f.label "Hours", style: "display:inline", default: 0 %>
            
            
                  <%= f.text_field :minute_worked ,  class: "input-small inline"%>
                  <%= f.label "Minutes", style: "display:inline" %>
            
              </div>
                
            </div>  
            

            <div class="control-group">

              <%= f.label "Person performing the work", class: "control-label" %>
              <div class="controls">

              <%= select_tag(:worker, options_from_collection_for_select(@account.workers, :id, :name)) %>


              </div>

              <div class="control-group">
                <div class="controls">
                  <br/>
                  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
                </div>
              </div>
              
            </div>


            
          <% end %>