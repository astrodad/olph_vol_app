<div class="well">
      <h3>
        Account: <%= @account.name %>
      </h3>
      <section>
        <div>School Year: <%= @account.year %></div>
        <div>Family Type: <%= @account.family_type.name %></div>
        </p>
        <% if @account.admin? %>
          <p>
            This account has administrator privileges.
          </p>
        <% end %>
      </section>  
      <h4>
        Registered Volunteers:
      </h4>

      <div style="padding:5px">
        <ol>
          <% @account.workers.each do  |worker| %>
              <li><%= worker.name %> <%= '(' + worker.relationship + ')' if worker.relationship %>
                <% if worker.stand_certified? %>
                  <i class="icon-ok"></i>
                <% end %>
              </li>
            <% end %>
        </ol>
        <p><i class="icon-ok"></i> = STAND certified. </p>
      </div>
      <h4>Total hours worked: 
        <span id="hours_worked_total"><%= @account.events.any?? @account.total_hours_worked : 0 %></span> </h4>
</div>