



<table class="table table-striped">
	<thead>
		<tr>
			<th>Activity</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>

	<%= f.fields_for :activity_workers do |ff| %>
	<tr>
			<td width="30%">
				<%= ff.hidden_field :activity_id %>
        <%= ff.check_box :_destroy, {:checked => ff.object.persisted?}, '0', '1' %>
        	<%=  ff.object.activity.activity %>
			</td>
		
			<td>
				<%= ff.object.activity.description %>
			</td>
		</tr>



	<% end %>
	
	</tbody>
</table>